<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введіть ваше ім'я"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оберіть тип піци:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/checkPepperoni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пепероні"/>

        <CheckBox
            android:id="@+id/checkMargarita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Маргарита"/>

        <CheckBox
            android:id="@+id/checkHawaiian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Гавайська"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оберіть розмір:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/radioGroupSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мала"/>

            <RadioButton
                android:id="@+id/radioMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Середня"/>

            <RadioButton
                android:id="@+id/radioLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Велика"/>
        </RadioGroup>

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ОФОРМИТИ ЗАМОВЛЕННЯ"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_button"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Результат замовлення з'явиться тут"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>